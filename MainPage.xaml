<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThemeLoader.MainPage"
             BackgroundColor="Black">

    <Grid RowDefinitions="Auto,*">
        <!-- Controls -->
        <StackLayout Orientation="Horizontal" Padding="10" Spacing="10">
            <Button Text="Browse theme.json" Clicked="OnBrowseClicked"/>
            <Button Text="Start Slideshow" Clicked="OnStartSlideshowClicked"/>
            <Button Text="Stop Slideshow" Clicked="OnStopSlideshowClicked"/>
            <Slider x:Name="IntervalSlider" Minimum="5" Maximum="60" Value="30" WidthRequest="150"/>
            <Label x:Name="IntervalLabel" Text="30s" TextColor="White"/>
        </StackLayout>

        <!-- Wallpaper viewer -->
        <Image x:Name="WallpaperImage"
               Grid.Row="1"
               Aspect="AspectFill"
               HorizontalOptions="Fill"
               VerticalOptions="Fill"/>
    </Grid>
</ContentPage>